<Window x:Class="WPF_CERTIFICADO.Tema_26.xaml_05.Ventana"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CERTIFICADO.Tema_26.xaml_05"
        mc:Ignorable="d"
        
        Title="VENTANA CSHARP WPF"
        Height="325"
        Width="400"
        Icon="cross1.png"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">

        <Grid Margin="40">
        <StackPanel>
            <TextBlock Text="LISTBOX" Foreground="Blue" FontSize="14" TextAlignment="Center" Margin="0,-15,0,15" />
            <ListBox Name="lbNumero" Width="100" Height="150" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="botCargar" Content="Cargar" Width="80" Margin="0,15,5,0" Click="Cargar"/>
                <Button Name="botLimpiar" Content="Limpiar" Width="80" Margin="0,15,5,0" Click="Limpiar"/>
                <Button Name="botSalir" Content="Salir" Width="80" Margin="0,15,0,0" Click="Salir"/>
            </StackPanel>
        </StackPanel>
        </Grid>
    
    
</Window>
